#!/usr/bin/make -f

DIR := debian/tmp

%:
	dh $@ --with quilt

override_dh_auto_build:
	./build.sh $(DIR)

override_dh_auto_install:
	mkdir -p $(DIR)/usr/lib
	cp _build/libvyosconfig.so $(DIR)/usr/lib/libvyosconfig.so.0
	dh_makeshlibs

override_dh_auto_test:
	echo "No tests yet"

override_dh_clean:
	./clean.sh
	dh_clean
